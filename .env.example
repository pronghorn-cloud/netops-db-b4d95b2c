# Server Configuration
PORT=3000
NODE_ENV=development

# Database - PostgreSQL
# Get this from your Render.com PostgreSQL dashboard or configure locally
# Main application connection (use netops_app role)
DATABASE_URL=postgresql://netops_app:password@host:5432/netops_db?sslmode=require

# Alternative connection strings for different roles:
# Admin access (for migrations and DDL operations)
# DATABASE_URL=postgresql://netops_admin:password@host:5432/netops_db?sslmode=require
#
# Read-only access (for reporting/analytics)
# DATABASE_URL=postgresql://netops_readonly:password@host:5432/netops_db?sslmode=require
#
# Monitoring access (for DataDog, Prometheus, etc.)
# DATABASE_URL=postgresql://netops_monitoring:password@host:5432/netops_db?sslmode=require
# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

RATE_LIMIT_MAX_REQUESTS=100
